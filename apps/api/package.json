{
  "name": "@nexus/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sls offline start",
    "build": "tsc",
    "deploy": "sls deploy",
    "deploy:prod": "sls deploy --stage prod",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "IS_LOCAL=true jest --config jest.integration.config.js",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:init": "npx ts-node scripts/init-local-db.ts",
    "db:logs": "docker-compose logs -f",
    "user:create": "npx ts-node scripts/create-user.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@nexus/shared": "*",
    "@node-rs/argon2": "^2.0.0",
    "axios": "^1.13.2",
    "jose": "^5.9.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@nexus/eslint-config": "*",
    "@nexus/tsconfig": "*",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.10.0",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "serverless": "^4.4.0",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
